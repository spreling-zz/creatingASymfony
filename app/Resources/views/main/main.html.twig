{% extends 'base.html.twig' %}



{% block title %}
    welcome
{% endblock %}
{% block body %}
    <div class="container">

        <div class="header-box row">
            <div class="col-xs-4">
                <img src="https://www.lyceo.nl/wp-content/themes/lyceo-2015/dist/assets/images/lyceo.png" alt="lyceo"/>
            </div>
            <div class="col-xs-6 v-center">
                <h1>Wij willen jouw menig</h1>
            </div>
        </div>
        <div class="content-box row table-striped-eva">


            {{ form_start(form) }}
            {{ form_errors(form) }}

                <div class="row">
                    <div class="col-xs-7 table-header">
                        Beoordeel jezelf: <span class="small">(1= helemaal niet mee eens, 10 = helemaal mee eens)</span>
                    </div>

                    <div class="offset-xs-1 col-xs-5 table-header">
                        <div class="row">
                            {% for i in 1..10 %}
                                <div class="col-xs-1"> {{ i }}</div>
                            {% endfor %}
                        </div>
                    </div>

                </div>
                {% for child in form.children|keys %}
                    {% if child[0:-3] == "selfQuestions" %}
                        {{ form_row(attribute(form.children,child)) }}
                    {% endif %}
                {% endfor %}

            {{ form_end(form) }}
        </div>

    </div>



{% endblock %}
